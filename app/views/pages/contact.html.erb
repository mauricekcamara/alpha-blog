<h1 class="center">Contact</h1>
<%= flash[:notice] %>

<%= form_tag("/pages/thank_you", class:"custom-form") do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
  </div><!--form group-->
  <div class="form-group">
    <%= label_tag :email, "Email Address" %>
    <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
  </div><!--form group-->
  <div class="form-group">
    <%= label_tag :message %>
    <%= text_area_tag :message, nil, class: "form-control", style:"resize:none", cols:"40", rows:"5",
  placeholder: "Enter Message" %>
  </div><!--form group-->
  <%= submit_tag "Send", class:"btn btn-danger" %>
<% end %>
