<h1 align="center">Signup for AlphaBlog</h1>

<%= render 'shared/errors', obj: @user %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div><!--control-label-->
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div><!--col-->
      </div><!--form-group-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div><!--control label-->
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", autofocus: true %>
        </div><!--col-->
      </div><!--form group-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div><!--control label-->
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter a password", autofocus: true %>
        </div><!--col-->
      </div><!--form group-->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign Up", class: "btn btn-danger btn-lg" %>
        </div><!--col-->
      </div><!--form group-->
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
     [ <%= link_to 'Cancel request and go to articles listing', articles_path %> ]
    </div><!--col-->
  </div><!--col-->
</div><!--row-->