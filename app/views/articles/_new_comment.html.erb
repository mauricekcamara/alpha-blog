<% if logged_in? %>
  <div class="row">
    <div class="center">
    <h4>Add a comment</h4>
    <%= form_for([@article, @article.comments.build], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :body, "Comments" %>
        </div><!--control label-->
        <div class="col-sm-8">
          <%= f.text_area :body, class:"form-control" %>
        </div><!--col-->
      </div><!--form group-->
      <div class="form-group">
        
          <div class="rating"></div>
        <p><%= f.submit "Submit" %></p>
        
      </div><!--form group-->
    <% end %>
    </div><!--col xs 12-->
  </div><!--row-->
<% end %>