<% if @article.errors.any?%>
  <h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end%>
  </ul>
<%end%>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div><!--control-label-->
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div><!--col-->
      </div><!--form-group-->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div><!--control label-->
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Article body", autofocus: true %>
        </div><!--col-->
      </div><!--form group-->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-danger btn-lg" %>
        </div><!--col-->
      </div><!--form group-->
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
     [ <%= link_to 'Cancel request and go to articles listing', articles_path %> ]
    </div><!--col-->
  </div><!--col-->
</div><!--row-->